<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>saludo</servlet-name>
        <servlet-class>es.albarregas1.servlets.Saludo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Parametros</servlet-name>
        <servlet-class>servlets.Parametros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cabeceras</servlet-name>
        <servlet-class>servlets.Cabeceras</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CicloDeVida</servlet-name>
        <servlet-class>servlets.CicloDeVida</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>estiloParametros</servlet-name>
        <servlet-class>estiloParametros</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saludo</servlet-name>
        <url-pattern>/saludo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Parametros</servlet-name>
        <url-pattern>/Parametros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cabeceras</servlet-name>
        <url-pattern>/Cabeceras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CicloDeVida</servlet-name>
        <url-pattern>/CicloDeVida</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>estiloParametros</servlet-name>
        <url-pattern>/estiloParametros</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
